<?xml version="1.0" encoding="utf-8"?>
<layer-list
    android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="-1dp"
        android:top="1dp"
        android:right="-1dp"
        android:left="-1dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2px"
                android:color="#C5C5C5"/>
            <solid
                android:color="#FFFFFF"/>
        </shape>
    </item>
</layer-list>