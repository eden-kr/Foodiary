<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tmap"
        android:orientation="vertical"
        android:layout_weight="2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarket_bold"
            android:text="2020-09-11"
            android:layout_margin="20dp"
            android:id="@+id/fStep_today"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:id="@+id/v1"
            android:layout_below="@id/fStep_today"
            android:background="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:text="이동 거리"
            android:fontFamily="@font/nanum_gothic_bold"
            android:layout_margin="20dp"
            android:id="@+id/fStep_move"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:text="소모칼로리"
            android:fontFamily="@font/nanum_gothic_bold"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:id="@+id/fStep_consumeKcal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="걸음 수"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:id="@+id/fStep_step"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fStep_move"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0"
                android:textSize="20dp"
                android:fontFamily="@font/gmarket_bold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/fStep_move_value"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:fontFamily="@font/gmarket_bold"
                android:textSize="20dp"
                android:id="@+id/fStep_kcal_value"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/fStep_step_value"
                android:fontFamily="@font/gmarket_bold"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_weight="2"
                android:src="@drawable/road"/>
        </LinearLayout>

    </RelativeLayout>

        <!--  거리 소모칼로리 스텝 날짜-->
</LinearLayout>